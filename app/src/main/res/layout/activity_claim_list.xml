<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/claimListActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ClaimListActivity">

    <com.jretuerto.bootcamp.trabajofinal.util.component.NavigationViewComponent
        android:id="@+id/claimNavigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:titleNavigation="@string/title_claim_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </com.jretuerto.bootcamp.trabajofinal.util.component.NavigationViewComponent>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/claimRecycleView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/claimNavigation" />

</androidx.constraintlayout.widget.ConstraintLayout>